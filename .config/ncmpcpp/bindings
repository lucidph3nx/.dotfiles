# basic vim motions

def_key "l"
  next_column
def_key "h"
  previous_column
def_key "k"
  scroll_up
def_key "j"
  scroll_down

def_key "G"
  move_end
def_key "g"
  move_home

def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

def_key "+"
    show_clock
def_key "="
    volume_up

# some handy key shortcuts
def_key "v"
  show_visualizer
def_key "f"
  show_browser
def_key "f"
  change_browse_mode
def_key "m"
  show_media_library
def_key "m"
  toggle_media_library_columns_mode
